<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Module05Exercise01.View.ViewEmployee"
             Title="View Employee"
             BackgroundColor="#f0f8ff">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Employee Information"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#2F4F4F"
                   HorizontalOptions="Center"
                   Margin="0, 20, 0, 10"/>

            <!-- ListView for Employee Details -->
            <Frame BackgroundColor="White"
                   CornerRadius="15"
                   HasShadow="True">
                <ListView ItemsSource="{Binding EmployeeList}"
                          HasUnevenRows="True"
                          SeparatorColor="#dcdcdc">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout Padding="10">
                                    <!-- Display Name -->
                                    <Label Text="{Binding Name}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="#4682B4"/>
                                    <!-- Separator -->
                                    <BoxView HeightRequest="1"
                                             BackgroundColor="#dcdcdc"
                                             Margin="0, 5"/>

                                    <!-- Display Address with Icon -->
                                    <Label Text="ðŸ  Address:"
                                           FontAttributes="Italic"
                                           TextColor="#808080"/>
                                    <Label Text="{Binding Address}"
                                           FontSize="14"
                                           TextColor="#2F4F4F"/>
                                    <!-- Separator -->
                                    <BoxView HeightRequest="1"
                                             BackgroundColor="#dcdcdc"
                                             Margin="0, 5"/>

                                    <!-- Display Email with Icon -->
                                    <Label Text="ðŸ“§ Email:"
                                           FontAttributes="Italic"
                                           TextColor="#808080"/>
                                    <Label Text="{Binding Email}"
                                           FontSize="14"
                                           TextColor="#2F4F4F"/>
                                    <!-- Separator -->
                                    <BoxView HeightRequest="1"
                                             BackgroundColor="#dcdcdc"
                                             Margin="0, 5"/>

                                    <!-- Display Contact Number with Icon -->
                                    <Label Text="ðŸ“ž Contact Number:"
                                           FontAttributes="Italic"
                                           TextColor="#808080"/>
                                    <Label Text="{Binding ContactNo}"
                                           FontSize="14"
                                           TextColor="#2F4F4F"/>
                                    <!-- Separator -->
                                    <BoxView HeightRequest="1"
                                             BackgroundColor="#dcdcdc"
                                             Margin="0, 5"/>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Frame>

            <!-- Load Data Button -->
            <Button Text="Load Data"
                    Command="{Binding LoadDataCommand}"
                    BackgroundColor="#32CD32"
                    TextColor="White"
                    CornerRadius="25"
                    Padding="10"
                    FontAttributes="Bold"
                    HorizontalOptions="Fill"/>

            <!-- Connection Status -->
            <Label x:Name="ConnectionStatusLabel"
                   Text="{Binding StatusMessage}"
                   FontSize="18"
                   TextColor="#4682B4"
                   HorizontalOptions="Center"
                   FontAttributes="Italic"
                   Margin="0, 20, 0, 0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
